[$HOME/.config/vcsh/repo.d/vimrc.git]
checkout = vcsh clone git@gitlab.ak-online.be:kandre/vimrc.git vimrc
	   vcsh run vimrc sh -c "cd $HOME; unset GIT_WORK_TREE ; git submodule init"
	   vcsh run vimrc sh -c "cd $HOME; unset GIT_WORK_TREE ; git submodule update"
update   = vcsh run vimrc git pull
	   vcsh run vimrc sh -c "cd $HOME; unset GIT_WORK_TREE ; git submodule init"
	   vcsh run vimrc sh -c "cd $HOME; unset GIT_WORK_TREE ; git submodule update"
